<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.main.modal_bottom_sheet.ModalBottomSheetFragment">

    <ImageView
        android:id="@+id/shareImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/shareTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="SHARE"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/shareImage"
        app:layout_constraintStart_toEndOf="@id/shareImage"
        app:layout_constraintTop_toTopOf="@id/shareImage"
        />


    <ImageView
        android:id="@+id/linkImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shareImage"/>

    <TextView
        android:id="@+id/linkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="GET LINK"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/linkImage"
        app:layout_constraintStart_toEndOf="@id/linkImage"
        app:layout_constraintTop_toTopOf="@id/linkImage"
        />

    <ImageView
        android:id="@+id/playImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_play_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linkImage"/>

    <TextView
        android:id="@+id/playTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="PLAY STORE AND OTHER APPS MAYBE?"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/playImage"
        app:layout_constraintStart_toEndOf="@id/playImage"
        app:layout_constraintTop_toTopOf="@id/playImage"
        />


</androidx.constraintlayout.widget.ConstraintLayout>